---
import { Image } from "astro:assets"
import unko from "../assets/img/Logo.svg"
---
<header>
  <div class="box">
    <h1 class="">
      <a href="#">
        <Image src={unko} alt="Logo"></Image>
      </a>
    </h1>
    <nav class="">
      <ul class="">
        <li class="menuFont"><a href="#sec01">ごあいさつ</a></li>
        <li class="menuFont"><a href="#sec02">スケジュール</a></li>
        <li class="menuFont"><a href="#sec03">イベント</a></li>
        <li class="menuFont"><a href="#sec04">カウントダウン</a></li>
      </ul>
    </nav>
  </div>
</header>

<style lang="scss">
  header{
    padding: 40px;
    padding-top: 24px;
    padding-bottom: 0;
    position: fixed;
    top: 0px;
    width: 100%;
    z-index: 100000;
    @media (max-width: 765px) {
      padding: 12px;
      padding-bottom: 0;
      padding-top: 12px;
    }
    h1{
      width: 120px;
      transition: 0.3s;
      &:hover{
        scale: 0.9;
      }
      @media (max-width: 765px) {
        width: 80px;
    }
    }
    .box{
      display: flex;
      padding: 12px 64px;
      justify-content: space-between;
      align-items: center;
      align-self: stretch;
      border-radius: 200px;
      background: #fff;
      box-shadow: 0px 2px 10px 0px rgba(204, 204, 204, 0.25);
      @media (max-width: 765px) {
      padding: 8px;
      justify-content:center;
    }
    }
    ul{
      display: flex;
      gap: 24px;
      align-items: center;
      justify-content: center;
      @media (max-width: 765px) {
        display: none;
    }
    }
    li{
      transition: 0.3s;
      position: relative;
      &::before{
        content: "";
        width: 4px;
        height: 4px;
        border-radius: 100px;
        position: absolute;
        background: #00D1B5;
        left: 50%;
        transform: translateX(-50%);
        top: -8px;
        transition: 0.3s;
        opacity: 0;
      }
      &::after{
        content: "";
        width: 4px;
        height: 4px;
        border-radius: 100px;
        position: absolute;
        background: #00D1B5;
        // border: 1px solid #00D1B5;
        left: 50%;
        transform: translateX(-50%);
        top: -8px;
        transition: 0.3s;
        opacity: 0;
        transform-origin: center; /* アニメーションの起点を中央に設定 */
      }
      &:hover{
        color: #00D1B5;
        &::before{
          opacity: 1;
        }
        &::after{
          transform-origin: center; /* アニメーションの起点を中央に設定 */
          @keyframes scale-back {
              0% {
                transform: translateX(-50%) scale(1); /* 初期状態 */
                opacity: 0.9;
              }
              100% {
                transform: translateX(-50%) scale(10); /* 拡大時の状態 */
                opacity: 0;
              }
            }
            animation: scale-back 0.5s both;
        }
      }
    }
  }
</style>