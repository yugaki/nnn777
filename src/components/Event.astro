  </figure> -->
</div>
<section class="event" id="sec03">
  <div class="inner">
    <h2 class="tit_h2 --ch">イベント</h2>
    <div class="eventBox">
      <div class="eventtxt"></div>
      <div class="eventImg"></div>
    </div>
    <div class="formLink">
      <!-- <a href="" class="btnItem">
        投稿フォームはこちら
      </a> -->
      <p class="btnItem">
        投稿フォーム準備中...
      </p>
    </div>
  </div>
</section>

<style lang="scss">
  .eventWave{
    position: relative;
			.waves {
				position:relative;
				width: 100%;
				// margin-bottom:-12px; 
				max-height:160px;
				/* Animation */
				.parallax > use {
					animation: move-forever 30s cubic-bezier(.55,.5,.45,.5) infinite;
				}
				.parallax > use:nth-child(1) {
					animation-delay: 0s;
					animation-duration: 8s;
				}
				.parallax > use:nth-child(2) {
					animation-delay: -5s;
					animation-duration: 16s;
				}
				.parallax > use:nth-child(3) {
					animation-delay: -10s;
					animation-duration: 24s;
				}
				.parallax > use:nth-child(4) {
					animation-delay: -15s;
					animation-duration: 32s;
				}
				@keyframes move-forever {
					0% {
					transform: translate3d(-90px,0,0);
					}
					100% { 
						transform: translate3d(85px,0,0);
					}
				}
			}
  }
  .event{
    padding-top: 80px;
    padding-bottom: 200px;
    overflow: hidden;
    position: relative;
    background: #669F75;
    // border-radius: 120px 0px 0px 0px;
    @media (max-width: 765px) {
      padding-top: 70px;
      padding-bottom: 80px;
      // border-radius: 60px 0px 0px 0px;
    }
  }
  .inner {
  max-width: 1120px;
  margin: 0 auto;
  position: relative;
  z-index: 500;
  padding: 0 40px;
  @media (max-width: 765px) {
    padding: 0 24px;
  }
  }
  .formLink{
    display: flex;
    justify-content: center;
    margin-top: 64px;
  }
  .btnItem{
    width: 400px;
    padding: 24px;
    font-family: "Zen Kaku Gothic New";
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; 
    background: #fff;
    border-radius: 8px;
    color: var(--mian01, #00D1B5);
    transition: 0.3s;
    text-align: center;
    &:hover{
      cursor: url('../assets/img/cursor.svg') 57.5 57.5, auto; /* 画像の中心に合わせる */
      background: #D9D9D9;
    }
  }
</style>

